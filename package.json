{
  "name": "palladium-secure-chat",
  "private": true,
  "version": "2.0.0",
  "license": "MIT",
  "description": "Palladium Secure Chat on the Palladium Blockchain",
  "author": "Palladium Team",
  "type": "module",
  "main": "electron/main.cjs",
  "scripts": {
    "dev": "vite",
    "build": "vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently \"vite\" \"wait-on http://localhost:5173 && cross-env NODE_ENV=development electron .\"",
    "electron:build": "npm run build && electron-builder",
    "electron:build:all": "npm run build && electron-builder --win --linux",
    "android:sync": "npm run build && npx cap sync",
    "android:open": "npx cap open android",
    "docker:build:android": "docker-compose up android-builder"
  },
  "dependencies": {
    "@capacitor/android": "^8.0.2",
    "@capacitor/cli": "^8.0.2",
    "@capacitor/core": "^8.0.2",
    "@emotion/react": "^11.14.0",
    "@emotion/styled": "^11.14.1",
    "@mui/icons-material": "^7.3.5",
    "@mui/material": "^7.3.5",
    "axios": "^1.13.2",
    "bitcoinjs-lib": "^6.1.6",
    "buffer": "^6.0.3",
    "crypto-js": "^4.2.0",
    "ecpair": "^2.1.0",
    "process": "^0.11.10",
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "react-qr-code": "^2.0.18",
    "tiny-secp256k1": "^2.2.4",
    "vite-plugin-node-polyfills": "^0.24.0"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^4.4.1",
    "concurrently": "^9.1.2",
    "cross-env": "^7.0.3",
    "electron": "^31.2.1",
    "electron-builder": "^24.13.3",
    "vite": "^5.4.11",
    "vite-plugin-wasm": "^3.3.0",
    "wait-on": "^7.2.0"
  },
  "build": {
    "appId": "com.palladium.securechat",
    "productName": "Palladium Secure Chat",
    "asar": true,
    "directories": {
      "buildResources": "public",
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "electron/**/*",
      "package.json"
    ],
    "extraResources": [],
    "win": {
      "icon": "public/logo_3.png",
      "target": [
        "portable"
      ]
    },
    "mac": {
      "icon": "public/logo_3.png"
    },
    "linux": {
      "icon": "public/logo_3.png"
    }
  }
}
